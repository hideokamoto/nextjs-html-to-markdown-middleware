{
  "name": "next-markdown-middleware",
  "version": "0.1.0",
  "type": "module",
  "description": "Next.js Middleware for converting HTML pages to Markdown format",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm",
    "build:esm": "tsc",
    "build:cjs": "tsc --project tsconfig.cjs.json && node scripts/rename-cjs.cjs",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:security": "vitest __tests__/security.test.ts",
    "test:performance": "vitest __tests__/performance.test.ts",
    "test:edge": "vitest __tests__/edge-runtime.test.ts",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "nextjs",
    "middleware",
    "markdown",
    "html",
    "turndown",
    "converter"
  ],
  "author": "hideokamoto",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hideokamoto/nextjs-html-to-markdown-middleware.git"
  },
  "bugs": {
    "url": "https://github.com/hideokamoto/nextjs-html-to-markdown-middleware/issues"
  },
  "homepage": "https://github.com/hideokamoto/nextjs-html-to-markdown-middleware#readme",
  "peerDependencies": {
    "next": ">=13.0.0"
  },
  "dependencies": {
    "jsdom": "^27.4.0",
    "linkedom": "^0.18.12",
    "turndown": "^7.1.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^20.14.0",
    "@types/turndown": "^5.0.5",
    "@vitest/coverage-v8": "^1.6.0",
    "next": "^14.2.0",
    "typescript": "^5.5.0",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
